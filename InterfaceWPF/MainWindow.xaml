<Window x:Class="InterfaceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:InterfaceWPF"
        WindowStartupLocation="CenterScreen"
        Title="Gestionnaire de mots de passe" Height="350" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TreeView
            Name="Arborescence"
            Height="300"
            Width="300"
	        Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Loaded="CreateTreeView"
            Grid.Column="0"
            />
        
        <StackPanel Grid.Column="1">
            <Button 
            Name="AjouterButton"
            Content="Ajouter une clé"
            Margin="10,10,10,10"
            Click="onAjouterButtonClicked"/>
        </StackPanel>
        
    </Grid>
</Window>
